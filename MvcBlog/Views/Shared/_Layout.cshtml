<!DOCTYPE html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>MvcBlog</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/png" href="content/favicon.png">
    <link rel="stylesheet" href="/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="/Content/css/typicons.css">
    <link rel="stylesheet" href="/Content/css/flexslider.css">
    <link rel="stylesheet" href="/Content/css/jquery.selectBoxIt.css">
    <link rel="stylesheet" href="/Content/css/jquery.fancybox.css">
    <link rel="stylesheet" href="/Content/css/main.css">
</head>
<body>
    <header class="navbar navbar-default hidden-menu hidden-menu-up">
        <div class="container">
            <div class="row">
                <div class="navbar-header col-sm-3">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="menu-title">Menu</span>
                        <i class="fa fa-bars"></i>
                    </button>
                    <ul class="social-icons nav navbar-nav">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                        <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                    </ul>
                </div>
                <div class="col-sm-9">
                    <div class="navbar-collapse collapse">
                        @if (ViewBag.UserType == null || ViewBag.UserType == 0)
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="/Home/Index">Home</a></li>
                                <li><a href="/User/Login">Login</a></li>
                                <li><a href="/User/Register">Register</a></li>
                                <li><a href="/Admin/Index">Admin</a></li>
                            </ul>
                        }
                        else
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="/Admin/Index">AdminHome</a></li>
                                <li class="dropdown">
                                    <a href="#" id="navbarDrop1" class="dropdown-toggle" data-toggle="dropdown">Post</a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="navbarDrop1">
                                        <li><a href="/Admin/WritePost">Write New Post</a></li>
                                        <li><a href="/Admin/EditPost">Edit Post</a></li>
                                    </ul>
                                </li>
                                <li><a href="/Admin/Category">Categories</a></li>
                                <li><a href="/Home/Index">UserHome</a></li>
                            </ul> 
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>
    <header class="main-header hidden-xs">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div class="logo">
                        <figure>
                            <a href="/Home/Index">
                                <img src="/Content/content/logo.png" alt="Logo" /></a>
                        </figure>
                    </div>
                </div>
                <div class="col-sm-8 text-right">
                    <div class="search-wrap active">
                        <div class="search-input">
                            <form action="#">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="s" placeholder="Search something interesting">
                                    <span class="input-group-addon">
                                        <button type="submit"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <a href="#" class="menu-button">Menu<i class="fa fa-bars"></i></a>
                </div>
            </div>
        </div>
    </header>
    <header class="mobile-logo visible-xs">
        <div class="container">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <div class="logo">
                        <figure>
                            <a href="/Home/Index">
                                <img src="/Content/content/logo.png" alt="Logo" /></a>
                        </figure>
                    </div>
                    <div class="mobile-search">
                        <form action="#">
                            <div class="input-group">
                                <input type="text" class="form-control" name="s" placeholder="Search something interesting">
                                <span class="input-group-addon">
                                    <button type="submit"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    @RenderSection("Title", false)

    <section class="main-container">
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="posts">@RenderBody() </div>
                </div>
                <aside class="col-sm-4">
                    <div class="widgets">
                        @RenderSection("RightTop", false)
                        @{
                            Html.RenderAction("CategoryWidget", "Home");
                            Html.RenderAction("PostWidget", "Home");
                            Html.RenderAction("TagWidget", "Home");
                        }
                        @RenderSection("RightBottom", false)
                    </div>
                </aside>
            </div>
        </div>
    </section>

    <footer class="main-footer">
        <div class="footer-newsletter">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 left">
                        <h2>Subscribe to our <strong>newsletter</strong></h2>
                        <p>
                            Receive periodic articles, updates, freebies
                            <br />
                            and premium items; every month.
                        </p>
                    </div>
                    <div class="col-sm-4 right">
                        <form action="#">
                            <div class="input-group">
                                <input type="email" class="form-control" name="newsletter-email" placeholder="Your Email:">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="fa fa-check"></i></button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-social">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <ul class="social-icons">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                            <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <div class="go-top">
        <i class="fa fa-angle-up"></i>
    </div>

    <script src="/Content/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js"></script>
    <script src="/Content/js/vendor/jquery-1.10.1.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js"></script>
    <script src="/Content/js/vendor/bootstrap.min.js"></script>
    <script src="/Content/js/vendor/jquery.isotope.min.js"></script>
    <script src="/Content/js/vendor/jquery.isotope.perfectmasonry.js"></script>
    <script src="/Content/js/vendor/jquery.raty.min.js"></script>
    <script src="/Content/js/vendor/jquery.flexslider.js"></script>
    <script src="/Content/js/vendor/jquery.mousewheel.js"></script>
    <script src="/Content/js/vendor/jquery.mCustomScrollbar.js"></script>
    <script src="/Content/js/vendor/jquery.hoverdir.js"></script>
    <script src="/Content/js/vendor/jquery.selectBoxIt.min.js"></script>
    <script src="/Content/js/vendor/jquery.fancybox.pack.js"></script>
    <script src="/Content/js/main.js"></script>

    <script>
        $(document).ready(function () {
            $("a.likePost").click(function () {
                var id = $(this).data("id");
                var link = "/Post/Like/" + id;
                var a = $(this);
                $.ajax({
                    type: "GET",
                    url: link,
                    success: function (result) {
                        a.html("Like: " + result);
                    }
                });
            });
        });

        function postSeen(id) {
            var link = "/Post/Seen/" + id;
            $.get(link);
        }
    </script>
</body>
</html>
